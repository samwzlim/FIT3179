{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 200,
  "title": {
    "text": "Number of working days required to buy iPhone 15 Pro in every country",
    "frame": "group"
  },
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/samwzlim/FIT3179/main/visualisation2/data/daystobuyiphone.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "stack",
          "groupby": ["Country"],
          "field": "Working_days",
          "sort": {"field": [], "order": []},
          "as": ["Working_days_start", "Working_days_end"],
          "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Working_days\"]) && isFinite(+datum[\"Working_days\"])"
        }
      ]
    }
  ],
  "signals": [
    {"name": "y_step", "value": 20},
    {
      "name": "height",
      "update": "bandspace(domain('y').length, 0.1, 0.05) * y_step"
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "rect",
      "style": ["bar"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "fill": {"value": "#4c78a8"},
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"], \"Price of iPhone 15 Pro (Local Currency)\": isValid(datum[\"iPhone_price_local_currency\"]) ? datum[\"iPhone_price_local_currency\"] : \"\"+datum[\"iPhone_price_local_currency\"], \"Average Monthly Wage (Local Currency)\": isValid(datum[\"Average_monthly_wage\"]) ? datum[\"Average_monthly_wage\"] : \"\"+datum[\"Average_monthly_wage\"]}"
          },
          "ariaRoleDescription": {"value": "bar"},
          "description": {
            "signal": "\"Working Days to Purchase iPhone: \" + (format(datum[\"Working_days\"], \"\")) + \"; Country: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]) + \"; Price of iPhone 15 Pro (Local Currency): \" + (isValid(datum[\"iPhone_price_local_currency\"]) ? datum[\"iPhone_price_local_currency\"] : \"\"+datum[\"iPhone_price_local_currency\"]) + \"; Average Monthly Wage (Local Currency): \" + (isValid(datum[\"Average_monthly_wage\"]) ? datum[\"Average_monthly_wage\"] : \"\"+datum[\"Average_monthly_wage\"])"
          },
          "x": {"scale": "x", "field": "Working_days_end"},
          "x2": {"scale": "x", "field": "Working_days_start"},
          "y": {"scale": "y", "field": "Country"},
          "height": {"signal": "max(0.25, bandwidth('y'))"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "data": "data_0",
        "fields": ["Working_days_start", "Working_days_end"]
      },
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "band",
      "domain": {
        "data": "source_0",
        "field": "Country",
        "sort": {"op": "sum", "field": "Working_days", "order": "descending"}
      },
      "range": {"step": {"signal": "y_step"}},
      "paddingInner": 0.1,
      "paddingOuter": 0.05
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Working Days to Purchase iPhone",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Country",
      "zindex": 0
    }
  ],
  "config": {}
}